extends baseEmail

block content
  p Hi #{firstName},
  p
    | You&apos;re receiving this e-mail because you or someone else has requested a password reset for your user account.
  br
  p Click the link below to reset your password:
  |  
  a(href=`${url}` target='_blank') #{url}
  br
  table.btn.btn-primary(role='presentation' border='0' cellpadding='0' cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation' border='0' cellpadding='0' cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Reset your password
  p If you didn't forget your password, please ignore this email!
